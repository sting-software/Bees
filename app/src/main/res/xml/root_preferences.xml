<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Display">

        <SwitchPreferenceCompat
            app:key="dark_mode"
            app:title="Dark Theme"
            app:summaryOn="Enabled"
            app:summaryOff="Disabled"
            app:icon="@drawable/ic_dark_mode"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Application">

        <Preference
            app:key="exit_app"
            app:title="Exit App"
            app:summary="Close the application"
            app:icon="@drawable/ic_exit_to_app"/>

    </PreferenceCategory>

</PreferenceScreen>