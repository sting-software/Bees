<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bulkedit.BulkEditHiveFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_view_bulk_edit_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/title_bulk_edit_hives"
            android:textAppearance="?attr/textAppearanceHeadline5"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/text_view_selected_hives_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceSubtitle1"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_bulk_edit_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Editing 5 selected hives" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_hive_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_hive_type"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_view_selected_hives_count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text_view_hive_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_frame_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_frame_type"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_hive_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

            <AutoCompleteTextView
                android:id="@+id/auto_complete_text_view_frame_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_number_of_frames"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_number_of_frames"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_frame_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_number_of_frames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkbox_auto_number_hives_bulk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/checkbox_auto_number_selected_hives"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_number_of_frames"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_starting_hive_number_bulk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_starting_hive_number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/checkbox_auto_number_hives_bulk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_starting_hive_number_bulk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_ending_hive_number_bulk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_ending_hive_number"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_starting_hive_number_bulk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:visibility="gone">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_ending_hive_number_bulk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/text_view_auto_numbering_warning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="?attr/colorError"
            android:textAppearance="?attr/textAppearanceCaption"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_ending_hive_number_bulk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Calculated quantity (X) must match selected hives count (Y)"
            tools:visibility="visible" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier_bulk_hive_inputs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="checkbox_auto_number_hives_bulk, text_input_layout_ending_hive_number_bulk, text_view_auto_numbering_warning" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_breed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/label_breed"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/barrier_bulk_hive_inputs"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_breed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_hive_last_inspection_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_last_inspection_date_optional"
            android:layout_marginTop="16dp"
            app:endIconDrawable="@drawable/ic_calendar"
            app:endIconMode="custom"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_breed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_hive_last_inspection_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/text_input_layout_hive_notes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="@string/hint_notes_optional"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_hive_last_inspection_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_hive_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:gravity="top" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_save_bulk_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_save"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_hive_notes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button_cancel_bulk_edit"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_cancel_bulk_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/action_cancel"
            android:layout_marginTop="32dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/text_input_layout_hive_notes"
            app:layout_constraintStart_toEndOf="@id/button_save_bulk_edit"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.Button.TextButton" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
